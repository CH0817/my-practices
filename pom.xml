<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.rex</groupId>
    <artifactId>my-practices</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>my-web</module>
        <module>my-service</module>
        <module>my-dao</module>
        <module>my-entity</module>
        <module>my-security</module>
        <module>my-api</module>
        <module>my-commons</module>
    </modules>

    <properties>
        <lombok.version>1.18.10</lombok.version>
        <mybatis.version>2.1.1</mybatis.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!--Spring Boot-->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>2.2.1.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!--Lombok-->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
                <scope>provided</scope>
            </dependency>
            <!--MyBatis-->
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter</artifactId>
                <version>${mybatis.version}</version>
            </dependency>
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter-test</artifactId>
                <version>${mybatis.version}</version>
                <scope>test</scope>
            </dependency>
            <!--modules-->
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-web</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-service</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-dao</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-entity</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-security</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-api</artifactId>
                <version>${version}</version>
            </dependency>
            <dependency>
                <groupId>com.rex</groupId>
                <artifactId>my-commons</artifactId>
                <version>${version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>